#!/bin/bash

function usage() {
    echo "Usage:  start-vpn [-v vpn_name] [-i[timeout]]"
    echo " -h Display this help message"
    echo " -v vpn_name default=badger"
    echo " -i inactive timeout default=300 sec"
    echo ""
    echo " vpn_name should match the <vpn_name>.ovpn and <vpn_name>.up files."
    exit 1
}

inactive=300
vpn_name='badger'

while getopts ":hi:v:" opt; do
  case $opt in
    i)
        inactive=$OPTARG
      ;;
    v)
        vpn_name=$OPTARG
      ;;
    \?)
        echo "Invalid option: -$OPTARG" >&2
        usage
      ;;
    h)
      usage
      ;;
  esac
done
shift $((OPTIND-1))

echo openvpn --auth-nocache --config ~/badger-vpn/"$vpn_name".ovpn --auth-user-pass ~/badger-vpn/"$vpn_name".up --inactive $inactive 20000
sudo openvpn --config ~/badger-vpn/"$vpn_name".ovpn --auth-user-pass ~/badger-vpn/"$vpn_name".up --inactive $inactive 20000
